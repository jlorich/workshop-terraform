{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "docker build . -t debug_workshop_terraform",
        "type": "shell",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": "$msCompile"
      },
      {
        "label": "run",
        "command": "docker run -p 8080:80 --name debug_workshop_terraform debug_workshop_terraform",
        "dependsOn": "build",
        "type": "shell",
        "isBackground": true,
        "problemMatcher": [
            {
              "pattern": [
                {
                  "regexp": ".",
                  "file": 1,
                  "location": 2,
                  "message": 3
                }
              ],
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": ".",
              }
            }
          ]
      },
      {
        "label": "stop",
        "command": "docker kill debug_workshop_terraform",
        "type": "shell"
      }
    ]
  }
  